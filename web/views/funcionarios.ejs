<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/web/css/funcionarios.css">
    <link rel="icon" href="/web/assets/favicon-32x32.png">
    <title>Funcionários</title>
</head>
<body>
    
    <header>
        <div class="funcionarios-header">
            <h1>Funcionários</h1>
            <a href="/menu"><button class="menu"><i class="fas fa-bars"></i></button></a>
            <a href="/addfunc"><button class="add"><i class="fas fa-plus"></i></button></a>
        </div>
    </header>
    <main>
        <div class="funcionarios-main">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Usuario</th>
                    <th>Senha</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                <% funcionarios.forEach(funcionario =>{ %>
                    <tr>
                        <td><%= funcionario.idt_funcionario %></td>
                        <td><%= funcionario.nome_funcionario %></td>
                        <td><%= funcionario.login_funcionario %></td>
                        <td><%= funcionario.senha_funcionario %></td>

                        <td>
                            <a href="/editarfunc/<%= funcionario.idt_funcionario %>" class="btn border-shadow update">
                                <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                            </a>
                            <a href="/deletarfunc/<%= funcionario.idt_funcionario %>" class="btn border-shadow delete">
                                <span class="text-gradient"><i class="fas fa-times"></i></span>
                            </a>
                        </td>
                    </tr>
                <%  }) %>  
            </tbody>
        </table>
        </div>
    </main>
    <script src="https://kit.fontawesome.com/6b77beae8e.js" crossorigin="anonymous"></script>
</body>
</html>